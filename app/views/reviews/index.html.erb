<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table class="table-striped table-hover col-lg-12">
  <thead>
    <tr>
      <th>Title</th>
      <th style="padding-right: 20px;">Rating</th>
      <th>Body</th>
      <th>Helpfulness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review|%>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.rating %></td>
        <td style="padding-right: 15px;"><%= review.body %></td>
        <% if review.helpfulness %>
            <td><%= review.helpfulness %></td>
        <% else %>
            <td>0</td>
        <% end %>
        <td style="padding: 8px;"><%= link_to 'Show', review %></td>
        <% if current_user.id == review.user_id %>
            <td style="padding: 8px;"><%= link_to 'Edit', edit_review_path(review) %></td>
            <td style="padding: 8px;"><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>       
  </tbody>
</table>

<br/>
<div class="col-lg-8">
  <%= link_to 'New Review', new_review_path %>
</div>


<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table class="table-striped table-hover col-lg-12">
  <thead>
    <tr>
      <th>Title</th>
      <th>Rating</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.rating %></td>
        <td><%= review.body %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<div class="col-lg-8">
  <%= link_to 'New Review', new_review_path %>
</div>


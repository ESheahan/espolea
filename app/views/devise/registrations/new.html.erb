<h1 class="login-title">Register to become a member of Espolea today!</h1>
<div class="container-devise">
  <div class="card"></div>
  <div class="card alternative">
    <h1 class="title">Register</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group label-floating">
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
        <%= f.label :first_name, class: "control-label" %>
      </div>
      <div class="form-group label-floating">
        <%= f.text_field :last_name, class: "form-control" %>
        <%= f.label :last_name, class: "control-label" %>
      </div>
      <div class="form-group radio-container">
        <div class="radio radio-primary">
          <label>
            <%= radio_button("user", "gender", "Female") %>
            Female
          </label>
        </div>
        <div class="radio radio-primary">
          <label>
            <%= radio_button("user", "gender", "Male") %>
            Male
          </label>
        </div>
      </div>
      <div class="form-group datetimepicker-container">
          <div class='input-group date' id='datetimepicker'>
          <%= datetime_field(:user, :birthdate, class: "form-control") %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar">
                  </span>
              </span>
          </div>
      </div>
      <div class="form-group label-floating">
        <%= f.email_field :email, class: "form-control" %>
        <%= f.label :email, class: "control-label" %>
      </div>
      <div class="form-group label-floating">
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
        <%= f.label :password, class: "control-label" %>
        <% if @minimum_password_length %>
          <p class="tex-muted"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>
      <div class="form-group label-floating">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
        <%= f.label :password_confirmation, class: "control-label" %>
      </div>
      <div class="button-container button-filled">
        <%= f.submit "Sign up" %>
      </div>
      <br>
      <div class="button-container">
        <%- if controller_name != 'sessions' %>
          <%= link_to "Log in", new_session_path(resource_name) %>
        <% end -%>
      </div>
      <div class="footer">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end -%>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker').datetimepicker({
            viewMode: 'years',
            format: 'DD/MM/YYYY'
        });
    });
</script>
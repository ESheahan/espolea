<p id="notice"><%= notice %></p>

<h1>Listing Clinics</h1>
 <%= form_for_filterrific @filterrific do |f| %>
  <div class="container-fluid">
    <div class="jumbotron row clinics-search">
      <div class="form-group">
        Search
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed',
          class: "form-control col-lg-8",
        ) %>
      </div>
      <div class="form-group">
        State
        <%= f.select(
          :by_state,
          @filterrific.select_options[:by_state],
          { include_blank: '- Any -' },
          class: 'filterrific-periodically-observed',
          class: "form-control"
        ) %>
      </div>
      <div class="form-group">
        Municipality
        <%= f.select(
          :by_municipality,
          @filterrific.select_options[:by_municipality],
          { include_blank: '- Any -' },
          class: 'filterrific-periodically-observed',
          class: "form-control"
        ) %>
      </div>
      <div >
        <%= link_to reset_filterrific_url, { :class=>"btn btn-warning" } do %>
          Reset filters <div class="ripple-container"></div>
        <% end -%>
        <div class="btn btn-success">Search<div class="ripple-container"></div></div>
      </div>
    </div>
  </div>
<%= render_filterrific_spinner %>
<% end %>

<%= render(
  partial: 'clinics/list',
  locals: { clinics: @clinics }
) %>
<div>Testing clinics functionality. Clinics length: <%= @clinics.length %></div>

<br>

<%= link_to 'New Clinic', new_clinic_path %>

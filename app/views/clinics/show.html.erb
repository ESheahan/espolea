<p id="notice"><%= notice %></p>

<div class="container-actions">
  <div class="btn-group-sm left-button back-button">
    <%= link_to clinics_path, { :class=>"btn btn-primary btn-fab" } do %>
          <i class="material-icons">arrow_back</i><div class="ripple-container"></div>
        <% end %>
  </div>
</div>

<div class="well clinic-card">
  <div class="panel-body left-info-container">
    <h1><%= @clinic.name %></h1>
    <ul>
      <li>
        <span class="card-info-description">Phone number</span>
        <span class="card-info-value"><%= @clinic.phone_number %></span>
      </li>
      <li>
        <span class="card-info-description">Email</span>
        <span class="card-info-value"><%= @clinic.email %></span>
      </li>
      <li>
        <span class="card-info-description">Website</span>
        <span class="card-info-value"><%= @clinic.website %></span>
      </li>
      <li>
        <span class="card-info-description">State</span>
        <span class="card-info-value"><%= @clinic.state %></span>
      </li>
      <li>
        <span class="card-info-description">Municipality</span>
        <span class="card-info-value"><%= @clinic.municipality %></span>
      </li>
    </ul>
    <div class="btn-group-sm edit-button">
      <%= link_to edit_clinic_path(@clinic), { :class=>"btn btn-info btn-fab" } do %>
        <i class="material-icons">edit</i><div class="ripple-container"></div>
      <% end %>
    </div>
  </div>
  <div id="map" class="right-info-container map-container"></div>
  <%= link_to "Add Review", "/review/new/#{@clinic.id}" %>
  <%= link_to "Add Scheduling Block", "/schedule/new/#{@clinic.id}" %>
</div>

<script>
 $("#map").geolocateMap({
      markers: 
        [ 
          {"lat":"<%= @clinic.latitude  %> ", "lng":"<%= @clinic.longitude  %>" }
      ],
      google_maps: {
        zoom: 20
      },
      markers_settings: {
        draggable: false,
        animation: google.maps.Animation.DROP
      }
    })

</script>
